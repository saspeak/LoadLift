configfile: "../2.Read-mapping/bwa_alignment.config.yaml"

species = config["species"]

rule all:
	input: 
		"bed_calls/forward/all_{species}_forward_orient_INDEL_rmv.bed",
		"bed_calls/reverse/all_{species}_reverse_orient_INDEL_rmv.bed"


rule indel_rmv:
    input:
        "variant_calls/{sample}/all_{species}_{sample}_orient.bcf"
    output:
        "variant_calls/{sample}/all_{species}_{sample}_orient_snps_only.recode.bcf"
    params:
        "--remove-indels --recode --recode-INFO-all"
    log:
        forward="logs/INDEL_rmv/mark_all_{species}_{sample}log"
    conda:
        "envs/bcftools_env.yaml"
    shell:
        "(vcftools --bcf {input.forward} {params} --out {output}) 2> {log.forward}"

rule format_conversion:
    input:
        forward="variant_calls/{sample}/all_{species}_{sample}_orient_snps_only.recode.bcf"
    output:
        "bed_calls/{sample}/all_{species}_{sample}_orient.bed"
    params:
        "-O v"
    log:
        forward="logs/bed_con/all_{species}_{sample}log"
    conda:
        "envs/bcftools_env.yaml"
    shell:
        "(bcftools view {input.forward} {params} | vcf2bed > {output}) 2> {log.forward}"


rule filter_indel:
    input:
        forward="bed_calls/{sample}/all_{species}_{sample}_orient.bed"
    output:
        "bed_calls/{sample}/all_{species}_{sample}_orient_INDEL_rmv.bed"
    params:
        "-v 'INDEL'"
    log:
        "logs/INDEL_rmv/all_{species}.log"
    conda:
        "envs/bcftools_env.yaml"
    shell:
        "(grep {params} {input.forward} > {output}) 2> {log}"
