rule indel_rmv:
    input:
        reverse="variant_calls/reverse/all_reverse_orient.bcf",
        forward="variant_calls/forward/all_forward_orient.bcf"
    output:
        reverse="variant_calls/reverse/all_reverse_orient_snps_only.recode.bcf",
        forward="variant_calls/forward/all_forward_orient_snps_only.recode.bcf"
    params:
            "--remove-indels --recode --recode-INFO-all"
    log:
        rev="logs/INDEL_rmv/mark_all_reverse.log",
        forward="logs/INDEL_rmv/mark_all_forward.log"
    environment:
        "envs/bcftools_env.yaml"
    shell:
        "(vcftools --bcf {input.reverse} {params} --out {output.reverse}) 2> {log.rev}"
        "(vcftools --bcf {input.forward} {params} --out {output.forward}) 2> {log.forward}"

rule format_conversion:
    input:
        reverse="variant_calls/reverse/all_reverse_orient_snps_only.recode.bcf",
        forward="variant_calls/forward/all_forward_orient_snps_only.recode.bcf"
    output:
        reverse="bed_calls/reverse/all_reverse_orient.bed",
        forward="bed_calls/forward/all_forward_orient.bed"
    params:
            "-O v"
    log:
        rev="logs/bed_con/all_reverse.log",
        forward="logs/bed_con/all_forward.log"
    environment:
        "envs/bcftools_env.yaml"
    shell:
        "(bcftools view {input.reverse} {params} | vcf2bed > {output.reverse}) 2> {log.reverse}"
        "(bcftools view {input.forward} {params} | vcf2bed > {output.forward}) 2> {log.forward}"


rule format_conversion:
    input:
        reverse="bed_calls/reverse/all_reverse_orient.bed",
        forward="bed_calls/forward/all_forward_orient.bed"
    output:
        reverse="bed_calls/reverse/all_reverse_orient_INDEL_rmv.bed",
        forward="bed_calls/forward/all_forward_orient_INDEL_rmv.bed"
    params:
            "-v 'INDEL'"
    log:
        "logs/INDEL_rmv/all.log"
    environment:
        "envs/bcftools_env.yaml"
    shell:
        "(grep {params} {input.reverse} > {output.reverse}) 2> {log}"
        "(grep {params} {input.forward} > {output.forward}) 2> {log}"